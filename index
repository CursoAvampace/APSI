<script>
    document.addEventListener('DOMContentLoaded', function () {
        // Actualizar fecha en el pie de página
        document.getElementById('fecha').innerText = 'Fecha: ' + new Date().toLocaleDateString('es-ES');

        // Función genérica para abrir el modal
        function openModal(content) {
            const modal = document.getElementById('modal');
            const modalBody = document.getElementById('modalBody');
            modalBody.innerHTML = content;  // Establece el contenido del modal
            modal.style.display = 'block';
        }

        // Cerrar modal
        document.getElementById('modalClose').addEventListener('click', closeModal);
        document.getElementById('modal').addEventListener('click', function (e) {
            if (e.target === this) {
                closeModal();
            }
        });

        function closeModal() {
            document.getElementById('modal').style.display = 'none';
        }

        // Tríptico Interactivo: Abre el panel en un modal
        document.querySelectorAll('.panel').forEach(panel => {
            panel.addEventListener('click', function () {
                const content = this.querySelector('.panel-content').innerHTML;
                openModal(content);
            });
        });

        // Tabla Interactiva: Expande la fila al hacer clic
        const trastornosTable = document.getElementById('trastornosTable');
        trastornosTable.addEventListener('click', function (e) {
            let target = e.target.closest('tr');
            if (!target) return; // Salir si no se hizo clic en una fila

            const trastorno = target.dataset.trastorno;
            if (!trastorno) return;  // Salir si la fila no tiene el atributo data-trastorno

            const expandedRow = target.nextElementSibling;
            if (expandedRow && expandedRow.classList.contains('expanded-row')) {
                // Si la fila ya está expandida, la colapsamos
                expandedRow.remove();
                target.classList.remove('active');
            } else {
                // Si la fila no está expandida, la expandimos
                const data = getDataForTrastorno(trastorno);
                if (data) {
                    const newRow = document.createElement('tr');
                    newRow.classList.add('expanded-row');
                    newRow.innerHTML = `
                        <td colspan="2">
                            <div style="display: flex; gap: 15px; align-items: flex-start; text-align: left; padding: 10px;">
                                <img src="${data.imagen}" alt="${trastorno}" style="width:150px; height:auto; border-radius:5px;">
                                <div>
                                    <p><strong>Características:</strong> ${data.caracteristicas}</p>
                                    <p><strong>Prevención:</strong> ${data.prevencion}</p>
                                    <p><strong>Tratamiento:</strong> ${data.tratamiento}</p>
                                    <p>${data.detalle}</p>
                                </div>
                            </div>
                        </td>
                    `;
                    target.parentNode.insertBefore(newRow, target.nextSibling);
                    target.classList.add('active');
                }
            }
        });

        // Sección "Comprobamos Juntos": Feedback al hacer clic en la respuesta
        document.querySelectorAll('.pregunta').forEach(pregunta => {
            pregunta.addEventListener('click', function (e) {
                if (e.target.classList.contains('respuesta')) {
                    const correct = e.target.dataset.correct === 'si';
                    const feedback = pregunta.querySelector('.feedback');